{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Normal C++",
            "type": "shell",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "${workspaceFolder}/Examples/${fileBasename}",
                "-I", "C:/mingw64/include",
                "-L", "C:/mingw64/lib",
                "-o",
                "${workspaceFolder}/.bin/${fileBasenameNoExtension}.exe"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Graphics C++",
            "type": "shell",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "${workspaceFolder}/Examples/${fileBasename}",
                "-I", "C:/mingw64/include",
                "-L", "C:/mingw64/lib",
                "-o",
                "${workspaceFolder}/.bin/${fileBasenameNoExtension}.exe",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
